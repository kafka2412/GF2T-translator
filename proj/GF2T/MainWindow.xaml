<Window x:Class="GF2T.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GF2T"
        mc:Ignorable="d"
        Topmost="True"
        Title="GF2T" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Visibility="Collapsed" Name="btCapture" Content="영역 캡처" Width="100" Click="btCapture_Click"/>
                    <!--<Border Width="16"/>-->
                    <Button Name="btOcr" Content="OCR 실행" Width="100" Click="btOcr_Click"/>
                    <Border Width="16"/>
                    <Button Name="btArea" Content="OCR 영역 설정" Width="100" Click="btArea_Click"/>
                    <Border Width="16"/>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Left:"/>
                            <TextBox Name="tbOcrLeft" IsReadOnly="True" TextWrapping="Wrap" Text="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Top:"/>
                            <TextBox Name="tbOcrTop" IsReadOnly="True" TextWrapping="Wrap" Text="0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBox Name="tbOcr" TextWrapping="Wrap"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Button Name="btTranslate" Content="번역하기" Width="200" Click="btTranslate_Click"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBox Name="tbOriginal" AcceptsReturn="True" TextWrapping="Wrap" Grid.Row="0"/>
                    <TextBox Name="tbTranslated" AcceptsReturn="True" IsReadOnly="True" TextWrapping="Wrap" Grid.Row="1"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

</Window>
