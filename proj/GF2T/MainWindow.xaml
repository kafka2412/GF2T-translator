<Window x:Class="GF2T.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GF2T"
        mc:Ignorable="d"
        Title="GF2T" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Button Name="btTranslate" Content="번역하기" Width="200" Click="btTranslate_Click"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBox Name="tbOriginal" TextWrapping="Wrap" Grid.Row="0"/>
                <TextBox Name="tbTranslated" TextWrapping="Wrap" Grid.Row="1"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
